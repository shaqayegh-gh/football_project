class Ball: #ball with 2 points as it's position
    def init(self):
        self.pos[0] = 20
        self.pos[1] = 30
    #move the ball when a player shots it
    def move(self, x, y):
        self.pos[0] += x
        self.pos[1] += y
    #reset ball position and bring it to the center of field after a goal
    def reset(self):
        self.pos[0] = 20
        self.pos[1] = 30